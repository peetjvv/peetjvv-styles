{
  "name": "@peetjvv/styles",
  "version": "0.0.1",
  "description": "Shared styles and componentes for peetjvv sites",
  "repository": {
    "type": "git",
    "url": "https://github.com/peetjvv/peetjvv-styles"
  },
  "homepage": "https://github.com/peetjvv/peetjvv-styles#readme",
  "bugs": {
    "url": "https://github.com/peetjvv/peetjvv-styles/issues"
  },
  "author": {
    "name": "Peet Janse van Vuuren",
    "url": "https://peetjvv.co.za/"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "copyfonts": "cpr ./src/fonts ./dist/fonts --overwrite",
    "copystyles": "cpr ./src/scss ./dist/scss --overwrite",
    "copyfiles": "npm run copystyles && npm run copyfonts",
    "build": "npm run clean && npm run copyfiles"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "avoid"
  },
  "peerDependencies": {
    "json-loader": "^0.5.7",
    "node-sass-json-importer": "^4.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "cpr": "^3.0.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3"
  }
}
